@model DashboardEditSpeakerViewModel
@{
    ViewData["Title"] = "Spikerni tahrirlash";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Spikerni tahrirlash</div>
                <hr>
                <input hidden asp-for="Id" />
                <input hidden asp-for="ExistingPhotoFilePath" />
                <form enctype="multipart/form-data" asp-controller="dashboard" asp-action="editspeaker" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control mb-1" id="input-1">
                        <span asp-validation-for="Name" class="AspValidationError"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" type="text" class="form-control mb-1" id="input-2">
                        <span asp-validation-for="Surname" class="AspValidationError"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Job"></label>
                        <input asp-for="Job" type="text" class="form-control mb-1" id="input-3">
                        <span asp-validation-for="Job" class="AspValidationError"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quote"></label>
                        <input asp-for="Quote" type="text" class="form-control mb-1" id="input-4">
                        <span asp-validation-for="Quote" class="AspValidationError"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input type="file" class="form-control mb-1" asp-for="Photo" />
                        <span asp-validation-for="Photo" class="AspValidationError"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5">Yaratish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
