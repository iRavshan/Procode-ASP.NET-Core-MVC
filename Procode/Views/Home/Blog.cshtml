@model HomeBlogViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewData["PageTitle"] = "Foydali " + Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="header" class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="white">@ViewData["PageTitle"]</h1>
            </div>
        </div>
    </div>
</header>
<div class="page-wraper">
    <div class="page-content bg-white">
        <div class="content-block">
            <div class="section-area section-sp1">
                <div class="container">
                    <div class="row">
                        <!-- Left part start -->
                        <div class="col-lg-8">
                            @{
                                foreach (var item in Model.Contents)
                                {
                                    <div class="blog-post blog-md clearfix">
                                        <div class="ttr-post-media">
                                            <a href="#"><img src="/assets/img/Computer-Programmer.jpg" alt="" style="width: 350px; height: 250px"></a>
                                        </div>
                                        <div class="ttr-post-info">
                                            <h5 class="post-title"><a href="blog-details.html">@item.Name</a></h5>
                                            <p>@item.ShortDescription</p>
                                            <ul class="media-post">
                                                <li>#JavaScript</li>
                                                <li>#Jwt</li>
                                                <li>@item.CreatedTime.ToString("dd-ddd yyyy")</li>
                                            </ul>
                                            <ul class="media-post">
                                                <li><i class="fa fa-user"></i></li>
                                                <li>@($"{item.AuthorName[0]}. {item.AuthorSurname}")</li>
                                            </ul>
                                            <div class="post-extra">
                                                <a asp-controller="home" asp-action="" class="btn-link">Batafsil <i class="fas fa-long-arrow-alt-right"></i> </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                            }

                            <button class="btn-solid-reg mt-5 mb-4">Ko'proq</button>
                        </div>
                        <!-- Left part END -->
                        <!-- Side bar start -->
                        <div class="col-lg-4 sticky-top">
                            <aside class="side-bar sticky-top">
                                <div class="widget">
                                    <h6 class="widget-title">Qidirish</h6>
                                    <div class="search-bx style-1">
                                        <form role="search" method="post">
                                            <div class="input-group">
                                                <input name="text" class="form-control" placeholder="Kalit so'zlarni kiriting..." type="text">
                                                <span class="input-group-btn">
                                                    <button type="submit" class="fa fa-search text-primary"></button>
                                                </span>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="widget recent-posts-entry">
                                    <h6 class="widget-title">Eng so'ngilar</h6>
                                    <div class="widget-post-bx">
                                        <div class="widget-post clearfix">
                                            <div class="ttr-post-media"> <img src="/assets/img/blog/recent-blog/pic1.jpg" width="200" height="143" alt=""> </div>
                                            <div class="ttr-post-info">
                                                <div class="ttr-post-header">
                                                    <h6 class="post-title"><a href="article-details.html">This Story Behind Education Will</a></h6>
                                                </div>
                                                <ul class="media-post">
                                                    <li>#dotnet</li>
                                                    <li>#jwt</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="assets/vendors/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="assets/vendors/bootstrap-touchspin/jquery.bootstrap-touchspin.js"></script>
}

@section styles {
    <link rel="stylesheet" type="text/css" href="/assets/css/assets.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/typography.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/shortcodes/shortcodes.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="/styles/css/styles.css">
}

