@model UserRegistrationRequest
@{
    ViewData["Title"] = "Registratsiya";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">

    <div class="heading-bx left">
        <h2 class="title-head">Registratsiya</h2>
        <p class="subtitle-head">Hisobingiz mavjudmi ? <a asp-controller="account" asp-action="login">Faollashtiring</a></p>
    </div>

    <form asp-controller="account" asp-action="register" method="post" class="contact-bx">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="name-txt">
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="name-txt">
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <label asp-for="Password" class="form-label">Parolni tasdiqlang</label>
                    <input asp-for="Password" type="password" class="name-txt">
                </div>
                <button class="btn-login" type="submit">Kirish</button>
            </div>
        </div>
    </form>
</div>
