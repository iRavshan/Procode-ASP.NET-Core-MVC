@model UserLoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="heading-bx left">
        <h2 class="title-head">Login</h2>
        <p class="subtitle-head">Hisobingiz mavjud emasmi ? <a asp-controller="account" asp-action="register">Ro'yxatdan o'ting</a></p>
    </div>
    <form asp-controller="account" asp-action="login" method="post" class="contact-bx">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="text" class="name-txt">
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="name-txt">
                </div>
                <input type="checkbox">
                <label for="" class="check-text">Meni eslab qol</label>
                <a asp-controller="account" asp-action="forgotpassword" class="forgot-text">Parolni unutdingizmi ?</a>
                <button class="btn-login" type="submit">Kirish</button>
            </div>
        </div>
    </form>
</div>

